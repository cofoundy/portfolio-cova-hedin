---
import { siteConfig } from "../config";
---

<section id="experience" class="py-16 md:py-20" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
  <div class="max-w-5xl mx-auto px-6 lg:px-8">
    <div class="mb-12 reveal">
      <p class="font-mono-accent text-xs tracking-[0.25em] uppercase mb-2" style={`color: ${siteConfig.colors.accent}`}>
        Track Record
      </p>
      <h2 class="text-3xl md:text-4xl font-bold" style={`color: ${siteConfig.colors.primaryDark}`}>
        Where I've taught &amp; created
      </h2>
    </div>

    <!-- Numbered experience entries -->
    <div class="space-y-0">
      {siteConfig.experience.map((exp: any, i: number) => (
        <a
          href={exp.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`reveal stagger-${i + 1} group flex gap-4 md:gap-8 py-8 border-b transition-colors`}
          style={`border-color: ${siteConfig.colors.primaryDark}08;`}
        >
          <!-- Number -->
          <span
            class="shrink-0 font-mono-accent text-4xl md:text-5xl font-bold leading-none"
            style={`color: ${siteConfig.colors.primaryDark}10;`}
          >
            {String(i + 1).padStart(2, '0')}
          </span>

          <!-- Content -->
          <div class="flex-1 min-w-0">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
              <h3 class="text-lg md:text-xl font-bold group-hover:translate-x-1 transition-transform" style={`color: ${siteConfig.colors.primaryDark}`}>
                {exp.company}
              </h3>
              <span
                class="font-mono-accent text-xs tracking-wider px-3 py-1 rounded-full shrink-0"
                style={`background-color: ${siteConfig.colors.accent}15; color: ${siteConfig.colors.accent};`}
              >
                {exp.period}
              </span>
            </div>
            <p class="text-sm font-medium mt-1" style={`color: ${siteConfig.colors.primary}`}>{exp.role}</p>
            <p class="text-gray-500 text-sm leading-relaxed mt-2">{exp.description}</p>
          </div>

          <!-- Arrow -->
          <svg class="w-5 h-5 shrink-0 mt-1 text-gray-300 group-hover:text-gray-600 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      ))}
    </div>
  </div>
</section>
