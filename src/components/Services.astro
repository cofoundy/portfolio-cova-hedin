---
import { siteConfig } from "../config";

const icons: Record<string, string> = {
  user: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>`,
  group: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>`,
  building: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>`,
  translate: `<svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path></svg>`,
};
---

<section id="services" class="py-16 md:py-20" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-12 reveal">
      <p class="font-mono-accent text-xs tracking-widest uppercase mb-3" style={`color: ${siteConfig.colors.primary}`}>
        What I Offer
      </p>
      <h2 class="text-3xl md:text-4xl font-bold" style={`color: ${siteConfig.colors.primaryDark}`}>
        Services
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
      {siteConfig.services.map((service: any, i: number) => (
        <div
          class={`card-hover reveal stagger-${i + 1} p-6 rounded-2xl border text-center`}
          style={`background-color: ${siteConfig.colors.surfaceLight}; border-color: ${siteConfig.colors.primaryDark}10;`}
        >
          <div
            class="w-14 h-14 mx-auto mb-4 rounded-xl flex items-center justify-center"
            style={`background-color: ${siteConfig.colors.accent}20; color: ${siteConfig.colors.primaryDark};`}
            set:html={icons[service.icon] || icons.user}
          />
          <h3 class="font-bold text-lg mb-2" style={`color: ${siteConfig.colors.primaryDark}`}>
            {service.title}
          </h3>
          <p class="text-gray-500 text-sm leading-relaxed">
            {service.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Booking CTA -->
    <div class="text-center mt-10 reveal">
      <a
        href={siteConfig.bookingUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="btn-hover inline-flex items-center gap-2 px-8 py-4 rounded-full font-semibold text-base shadow-lg"
        style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark};`}
      >
        &#x1F4C5; See Pricing & Book
      </a>
    </div>
  </div>
</section>
