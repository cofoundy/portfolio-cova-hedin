---
import { siteConfig } from "../config";
const { testimonials } = siteConfig;
---

<!-- Testimonials: THE centerpiece section -->
<section id="reviews" class="py-20 md:py-28" style={`background-color: ${siteConfig.colors.primaryDark}`}>
  <div class="max-w-6xl mx-auto px-6 lg:px-8">

    <!-- Section header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-16 reveal">
      <div>
        <p class="font-mono-accent text-xs tracking-[0.25em] uppercase mb-3" style={`color: ${siteConfig.colors.accent}`}>
          Student Reviews
        </p>
        <h2 class="text-3xl md:text-5xl font-bold text-white leading-tight">
          Don't take my<br/>word for it
        </h2>
      </div>
      <!-- Review counter -->
      <div class="mt-6 md:mt-0 flex items-center gap-4">
        <div class="text-right">
          <div class="font-mono-accent text-3xl md:text-4xl font-bold" style={`color: ${siteConfig.colors.accent}`}>
            {testimonials.totalReviews}
          </div>
          <div class="text-white/40 text-xs font-mono-accent uppercase tracking-wider">
            verified reviews
          </div>
        </div>
        <div class="w-px h-12 bg-white/15"></div>
        <div class="text-right">
          <div class="text-2xl md:text-3xl text-yellow-400">
            &#x2B50;&#x2B50;&#x2B50;&#x2B50;&#x2B50;
          </div>
          <div class="text-white/40 text-xs font-mono-accent uppercase tracking-wider">
            {testimonials.rating} average
          </div>
        </div>
      </div>
    </div>

    <!-- Testimonial cards: editorial alternating layout -->
    <div class="space-y-8">
      {testimonials.items.map((t: any, i: number) => (
        <div class={`reveal stagger-${i + 1}`}>
          <div
            class={`relative p-8 md:p-12 rounded-2xl ${i === 0 ? 'md:ml-0' : i === 1 ? 'md:ml-16 lg:ml-24' : 'md:ml-8 lg:ml-12'}`}
            style={`background-color: ${siteConfig.colors.primaryDark}; border: 1px solid rgba(255,255,255,0.06);`}
          >
            <!-- Large quote mark -->
            <span
              class="absolute top-4 left-6 md:top-6 md:left-10 text-6xl md:text-7xl leading-none select-none"
              style={`color: ${siteConfig.colors.accent}30; font-family: 'DM Serif Display', serif;`}
              aria-hidden="true"
            >&ldquo;</span>

            <!-- Quote text -->
            <p class="relative text-lg md:text-xl lg:text-2xl text-white/85 leading-relaxed mt-6 md:mt-4" style="font-family: 'DM Serif Display', serif;">
              {t.text}
            </p>

            <!-- Author -->
            <div class="mt-6 flex items-center gap-3">
              <div
                class="w-8 h-8 rounded-full flex items-center justify-center text-xs font-bold"
                style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark};`}
              >
                {t.author.charAt(0)}
              </div>
              <div>
                <span class="text-white/70 text-sm font-medium">{t.author}</span>
                <span class="text-white/30 text-sm"> &middot; {t.country}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- italki link -->
    <div class="mt-12 text-center reveal">
      <a
        href={testimonials.italkiUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-full text-sm font-medium transition-all hover:gap-3"
        style={`background-color: rgba(255,255,255,0.06); color: ${siteConfig.colors.accent}; border: 1px solid rgba(255,255,255,0.08);`}
      >
        Read all {testimonials.totalReviews} reviews on italki
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </a>
    </div>
  </div>
</section>
