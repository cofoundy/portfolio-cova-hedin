---
import { siteConfig } from "../config";
---

<!-- Top Shimmer -->
<div class="w-full h-1.5 bar-shimmer"></div>

<section id="hero" class="relative overflow-hidden" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
  <!-- Decorative "Hej!" watermark -->
  <div
    class="absolute top-8 right-0 md:right-12 text-[8rem] md:text-[14rem] font-bold leading-none select-none pointer-events-none"
    style={`color: ${siteConfig.colors.primaryDark}06; font-family: 'DM Serif Display', serif;`}
    aria-hidden="true"
  >Hej!</div>

  <div class="max-w-6xl mx-auto px-6 lg:px-8 py-16 md:py-24 lg:py-28">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10 lg:gap-16 items-center">
      <!-- Photo Column -->
      <div class="md:col-span-5 flex justify-center order-2 md:order-1">
        <div class="relative hero-photo">
          <!-- Swedish flag-inspired accent lines behind photo -->
          <div class="absolute -top-3 -left-3 w-24 h-24 border-t-4 border-l-4 rounded-tl-2xl" style={`border-color: ${siteConfig.colors.accent}`}></div>
          <div class="absolute -bottom-3 -right-3 w-24 h-24 border-b-4 border-r-4 rounded-br-2xl" style={`border-color: ${siteConfig.colors.primaryLight}`}></div>
          <img
            src={`${import.meta.env.BASE_URL}profile.jpg`}
            alt={siteConfig.name}
            class="relative w-64 h-72 md:w-72 md:h-80 lg:w-80 lg:h-96 object-cover object-top rounded-2xl shadow-2xl"
          />
          <!-- Floating review badge -->
          <div
            class="absolute -bottom-4 -right-4 md:-right-6 px-4 py-2.5 rounded-xl shadow-lg"
            style={`background-color: ${siteConfig.colors.primaryDark}; color: white;`}
          >
            <div class="flex items-center gap-2">
              <span class="text-yellow-400 text-sm">&#x2B50;</span>
              <span class="font-mono-accent text-xs font-bold">5,312 reviews</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Text Column -->
      <div class="md:col-span-7 order-1 md:order-2">
        <p class="hero-subtitle font-mono-accent text-xs tracking-[0.25em] uppercase mb-3" style={`color: ${siteConfig.colors.accent}`}>
          Swedish Teacher &amp; Content Creator
        </p>

        <h1 class="hero-title text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-[0.9]" style={`color: ${siteConfig.colors.primaryDark}`}>
          Cova<br/>Hedin
        </h1>

        <div class="hero-description mt-6 flex items-center gap-3">
          <div class="w-12 h-0.5 rounded-full" style={`background-color: ${siteConfig.colors.accent}`}></div>
          <p class="text-sm italic" style={`color: ${siteConfig.colors.primary}; font-family: 'DM Serif Display', serif;`}>
            A Swedish Latina in Italy
          </p>
        </div>

        <p class="hero-description mt-6 text-base md:text-lg text-gray-600 leading-relaxed max-w-lg" set:html={siteConfig.tagline.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />

        <!-- Dual CTA -->
        <div class="hero-cta mt-8 flex flex-col sm:flex-row gap-3">
          <a
            href={siteConfig.bookingUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-hover inline-flex items-center justify-center gap-2 px-7 py-3.5 rounded-full font-semibold text-base shadow-lg"
            style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark};`}
          >
            Book a Lesson &#x2192;
          </a>
          <a
            href={`mailto:${siteConfig.social.email}?subject=${encodeURIComponent(siteConfig.cta.emailSubject)}`}
            class="btn-hover inline-flex items-center justify-center gap-2 px-7 py-3.5 rounded-full font-semibold text-base border-2"
            style={`border-color: ${siteConfig.colors.primaryDark}30; color: ${siteConfig.colors.primaryDark};`}
          >
            Work with Me
          </a>
        </div>

        <!-- Social -->
        <div class="hero-social mt-6 flex items-center gap-4">
          <div class="flex gap-2">
            {siteConfig.social.instagram && (
              <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer"
                class="icon-hover w-9 h-9 rounded-full flex items-center justify-center text-white text-xs"
                style={`background-color: ${siteConfig.colors.primary}`} aria-label="Instagram">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
            )}
            {siteConfig.social.tiktok && (
              <a href={siteConfig.social.tiktok} target="_blank" rel="noopener noreferrer"
                class="icon-hover w-9 h-9 rounded-full flex items-center justify-center text-white text-xs"
                style={`background-color: ${siteConfig.colors.primary}`} aria-label="TikTok">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/></svg>
              </a>
            )}
            {siteConfig.social.youtube && (
              <a href={siteConfig.social.youtube} target="_blank" rel="noopener noreferrer"
                class="icon-hover w-9 h-9 rounded-full flex items-center justify-center text-white text-xs"
                style={`background-color: ${siteConfig.colors.primary}`} aria-label="YouTube">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
              </a>
            )}
            {siteConfig.social.linkedin && (
              <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer"
                class="icon-hover w-9 h-9 rounded-full flex items-center justify-center text-white text-xs"
                style={`background-color: ${siteConfig.colors.primary}`} aria-label="LinkedIn">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </a>
            )}
          </div>
          <span class="text-xs text-gray-400">|</span>
          <span class="font-mono-accent text-xs text-gray-400">60K+ followers</span>
        </div>
      </div>
    </div>

    <!-- Stats Bar -->
    <div class="hero-stats mt-16 grid grid-cols-3 gap-px rounded-xl overflow-hidden" style={`background-color: ${siteConfig.colors.primaryDark}10`}>
      {siteConfig.stats.map((stat: any, index: number) => (
        <div class="stat-number text-center py-5 px-4" style={`background-color: ${siteConfig.colors.surfaceLight}`}>
          <div class="text-2xl md:text-4xl font-bold font-mono-accent" style={`color: ${siteConfig.colors.primaryDark}`}>{stat.value}</div>
          <div class="text-xs text-gray-400 font-mono-accent uppercase tracking-wider mt-1">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<div class="w-full h-1.5 bar-shimmer"></div>
