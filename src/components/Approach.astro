---
import { siteConfig } from "../config";

const icons: Record<string, string> = {
  palette: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path></svg>`,
  target: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`,
  chat: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>`,
  chart: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>`,
  gift: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a4 4 0 00-4-4 4 4 0 00-4 4v2h8zm0 0V6a4 4 0 014-4 4 4 0 014 4v2h-8zM5 8h14a1 1 0 011 1v3a1 1 0 01-1 1H5a1 1 0 01-1-1V9a1 1 0 011-1zm0 5v7a2 2 0 002 2h10a2 2 0 002-2v-7H5z"></path></svg>`,
};
---

<section id="approach" class="py-16 md:py-20" style={`background-color: ${siteConfig.colors.surface}`}>
  <div class="max-w-4xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-12 reveal">
      <p class="font-mono-accent text-xs tracking-widest uppercase mb-3" style={`color: ${siteConfig.colors.primary}`}>
        My Method
      </p>
      <h2 class="text-3xl md:text-4xl font-bold" style={`color: ${siteConfig.colors.primaryDark}`}>
        What Makes My Lessons Special
      </h2>
    </div>

    <div class="space-y-4">
      {siteConfig.approach.map((item: any, i: number) => (
        <div
          class={`reveal stagger-${i + 1} flex items-start gap-4 p-5 rounded-xl border transition-all ${item.highlighted ? 'ring-2' : ''}`}
          style={`
            background-color: ${item.highlighted ? siteConfig.colors.accent + '15' : siteConfig.colors.surfaceLight};
            border-color: ${item.highlighted ? siteConfig.colors.accent : siteConfig.colors.primaryDark + '10'};
            ${item.highlighted ? `ring-color: ${siteConfig.colors.accent}40;` : ''}
          `}
        >
          <div
            class="shrink-0 w-10 h-10 rounded-lg flex items-center justify-center"
            style={`background-color: ${item.highlighted ? siteConfig.colors.accent : siteConfig.colors.primaryDark}; color: ${item.highlighted ? siteConfig.colors.primaryDark : 'white'};`}
            set:html={icons[item.icon] || icons.palette}
          />
          <div>
            <p class="font-semibold text-base" style={`color: ${siteConfig.colors.primaryDark}`}>
              {item.text}
            </p>
            {item.highlighted && (
              <span
                class="inline-block mt-2 px-3 py-1 rounded-full text-xs font-bold font-mono-accent"
                style={`background-color: ${siteConfig.colors.accent}; color: ${siteConfig.colors.primaryDark};`}
              >
                &#x2B50; INCLUDED IN EVERY LESSON
              </span>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
